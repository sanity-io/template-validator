{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/action",
    "rootDir": "./src",
    "noEmit": true
  },
  "include": ["./src/action.ts", "./src/validator.ts", "./src/types.ts"],
  "exclude": ["node_modules"]
}
